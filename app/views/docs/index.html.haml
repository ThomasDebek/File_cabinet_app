%h2 Index Docs
%table
  %thead
    %tr
      %th Title
      %th Content
      %th Created
      %th{:colspan => "3"}
      %tbody
        - @docs.each do |doc|
          %tr
            %td= doc.title
            %td= truncate(doc.content, length: 50)
            %td= time_ago_in_words(doc.created_at)
            %td= link_to 'Show', doc
            %td= link_to 'Edit', edit_doc_path(doc)
            %td= link_to 'Delete', doc, method: :delete, date: {confiirm: 'Are you Sure'}

%br/
%h2
  = link_to "New doc", new_doc_path
